{
    "compilerOptions": {
        "baseUrl": "src/js",
        "target": "esnext",
        "module": "esnext",
        "lib": ["dom", "es2015"],
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noUnusedLocals": true,
        "noEmit": true,
        "verbatimModuleSyntax": true
    },
    "include": [
        "src/js"
    ],
    "exclude": [
        "node_modules",
        "bin-debug/**/*",
        "bin-release/**/*"
    ]
}
